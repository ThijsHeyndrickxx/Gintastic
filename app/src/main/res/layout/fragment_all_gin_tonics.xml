<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="AllGinTonicsViewModel"
            type="com.example.android.gintastic.allgintonics.AllGinTonicsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background">



        <TextView
            android:id="@+id/all_gt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="@string/all_gt_title"
            android:textAppearance="@style/header_style_1"
            app:layout_constraintBottom_toTopOf="@+id/all_gt_sub_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/all_gt_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:paddingBottom="10sp"
            android:text="@string/all_gt_sub_title"
            android:textAppearance="@style/sub_title_style_1"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_gt_title" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="408dp"
            android:layout_height="504dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@id/all_gt_sub_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gin_tonic_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/list_item_gin_tonic"/>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>