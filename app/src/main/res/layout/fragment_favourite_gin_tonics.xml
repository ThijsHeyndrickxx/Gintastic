    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".favouritegintonics.FavouriteGinTonicsFragment">
    <data>
        <variable
            name="FavouriteGinTonicsViewModel"
            type="com.example.android.gintastic.favouritegintonics.FavouriteGinTonicsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
