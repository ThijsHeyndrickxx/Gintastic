<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.android.gintastic.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_allGinTonicsFragment"
            app:destination="@id/allGinTonicsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addGinTonicFragment"
            app:destination="@id/addGinTonicsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favouriteGinTonicsFragment"
            app:destination="@id/favouriteGinTonicsFragment" />
    </fragment>
    <fragment
        android:id="@+id/allGinTonicsFragment"
        android:name="com.example.android.gintastic.allgintonics.AllGinTonicsFragment"
        android:label="AllGinTonicsFragment" >
        <action
            android:id="@+id/action_allGinTonicsFragment_to_detailedGinTonicFragment"
            app:destination="@id/detailedGinTonicFragment" />
    </fragment>
    <fragment
        android:id="@+id/addGinTonicsFragment"
        android:name="com.example.android.gintastic.addgintonic.AddGinTonicFragment"
        android:label="fragment_add_gin_tonic"
        tools:layout="@layout/fragment_add_gin_tonic" />
    <fragment
        android:id="@+id/detailedGinTonicFragment"
        android:name="com.example.android.gintastic.detailedgintonic.DetailedGinTonicFragment"
        android:label="detailed_gin_tonic_fragment"
        tools:layout="@layout/fragment_detailed_gin_tonic" >
        <argument
            android:name="ginTonicId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/favouriteGinTonicsFragment"
        android:name="com.example.android.gintastic.favouritegintonics.FavouriteGinTonicsFragment"
        android:label="fragment_favourite_gin_tonics"
        tools:layout="@layout/fragment_favourite_gin_tonics" >
        <action
            android:id="@+id/action_favouriteGinTonicsFragment_to_detailedGinTonicFragment"
            app:destination="@id/detailedGinTonicFragment" />
    </fragment>
</navigation>